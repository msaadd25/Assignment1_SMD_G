<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image -->
    <ImageView
        android:id="@+id/story_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/story_publication_birdpic"
        android:contentDescription="Story background image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/closeicon2"
            android:contentDescription="Close story editor"
            android:padding="4dp" />


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/participants_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/partnershipicon"
                android:contentDescription="Participants"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/text_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/texticon"
                android:contentDescription="Add text"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/sticker_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/stickersicon"
                android:contentDescription="Add sticker"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/music_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/musicicon"
                android:contentDescription="Add music"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/filters_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/filtersicon"
                android:contentDescription="Add effects or filters"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/options_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/optionsicon"
                android:contentDescription="Options"
                android:padding="4dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_gravity="bottom"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/your_stories_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/story_publication_yourstories"
            android:contentDescription="Your stories button" />

        <ImageView
            android:id="@+id/close_friends_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/story_publication_closefriends"
            android:contentDescription="Close friends button" />


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/send_arrow_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:padding="12dp"
            android:src="@drawable/nexticon"
            android:contentDescription="Send to story" />
    </LinearLayout>

</FrameLayout>
